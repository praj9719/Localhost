<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <LinearLayout
        android:id="@+id/content_main_linear_layout_outer"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_gravity="center"
                android:visibility="gone"
                android:id="@+id/content_main_linear_layout_inner"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp"
                android:background="#fff"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="@color/colorAccent"
                    android:layout_width="match_parent"
                    app:cardCornerRadius="8dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="1dp"
                        app:cardCornerRadius="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:text="Category"/>
                            <Spinner
                                android:id="@+id/content_main_spinner_category"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/Category2">
                            </Spinner>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:text="Distance"/>
                            <Spinner
                                android:id="@+id/content_main_spinner_distance"
                                android:layout_margin="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:entries="@array/Distance">
                            </Spinner>
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_gravity="center"
                                app:cardCornerRadius="10dp"
                                android:layout_marginVertical="20dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardBackgroundColor="@color/colorAccent"
                                android:layout_height="wrap_content">
                                <Button
                                    android:id="@+id/content_main_button_filter"
                                    android:layout_width="wrap_content"
                                    android:background="@color/colorAccent"
                                    android:textColor="#fff"
                                    android:layout_height="35dp"
                                    android:layout_margin="3dp"
                                    android:text="Filter"/>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_below="@id/content_main_linear_layout_outer"
        android:id="@+id/content_main_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/content_main_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </androidx.recyclerview.widget.RecyclerView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/content_main_progress_bar"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>