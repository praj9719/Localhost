<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="3dp"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ProgressBar
        android:id="@+id/activity_register_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:visibility="invisible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#fff"
            android:textStyle="bold|italic"
            android:layout_marginBottom="20dp"
            android:textSize="30dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/activity_register_edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#ffff"
            android:textColorHint="#ffff"
            android:layout_margin="10dp"
            android:hint="Name"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/activity_register_edit_text_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:layout_margin="10dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/activity_register_edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#fff"
            android:textColorHint="#ffff"
            android:layout_margin="10dp"
            android:hint="Password"
            android:inputType="textPassword" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?"
                android:textColor="#ffff"
                android:layout_marginHorizontal="10dp"/>

            <TextView
                android:id="@+id/activity_register_text_view_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sign in"
                android:textStyle="bold"
                android:textColor="@color/colorAccent" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="4dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/activity_register_button_register"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:background="@color/colorPrimary"
                android:text="Register"
                android:textColor="#fff"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>